<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include("header") -%>
<body>

<div class="section">
<div class="box" id="heading">
    <h1> <%= _.capitalize(listTitle) %> </h1>
</div>

<div class="box">
    <% newItems.forEach( item =>{ %>
        <form action="<%= deleteEndpoint %>" method="post">
    <div class="item">
        <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
        <p><%= item.name %></p>
    </div>
        </form>
<% }) %>

    <form class="item" action="<%= endpoint %>" method="post">
        <input type="text" name="newItem" placeholder="Add New Item" autocomplete="off" autofocus>
        <button type="submit" name="submit">+</button>
    </form>

</div>
</div>
<%- include("footer") -%>

</body>
</html>